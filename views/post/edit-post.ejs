<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../partials/head.ejs', {title: 'Edit a Post | ActiveInsights'}) %>
    <link rel="stylesheet" href="/styles/post-edit.css">
</head>

<body>
    <%- include('../partials/nav.ejs') %>

    <section id="top">
        <h2>Edit a Post</h2>
    </section>

    <form method="POST" action="/posts/<%= post._id %>?_method=PUT">
        <!-- Name input -->
        <label for="name">Name:</label><br>
        <input type="text" id="name" name="name" value="<%= post.name %>"><br>
        <!-- Content input -->
        <label for="content">Content:</label><br>
        <textarea id="content" name="content"  required><%= post.content %></textarea><br>
        <input class="btn" type="submit" value="Edit Post">
    </form>

    <%- include('../partials/footer.ejs') %>
</body>

</html>