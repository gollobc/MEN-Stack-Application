<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../partials/head.ejs', {title: 'Add a Post | ActiveInsights'}) %>
    <link rel="stylesheet" href="/styles/post-edit.css">
</head>

<body>
    <%- include('../partials/nav.ejs') %>

    <section>
        <h2>Create a Post</h2>
    </section>

    <form method="POST" action="/posts">
        <!-- Name input -->
        <label for="name">Name:</label><br>
        <input type="text" class="form-control" id="name" name="name" placeholder="User"><br>
        <label for="content">Content:</label><br>
        <textarea id="content" class="form-control" name="content" placeholder="Content" required></textarea><br>
        <input type="submit" class="btn" value="Create Post">
    </form>

    <%- include('../partials/footer.ejs') %>
</body>

</html>
